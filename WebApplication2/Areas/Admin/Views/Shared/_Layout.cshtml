                        @*<li><a class="dropdown-item text-right" href="#">Something else here</a></li>*@
                    </ul>
                </li>
            </ul>
            <form asp-action="SearchedList" asp-area="Admin" asp-controller="Home" class="d-flex nav-item dropdown mt-3">
                <input class="form-control me-2" type="search" name="searchedtext" placeholder="جستجو کنید" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <span class=" dropdown mr-5 align-items-center mb-2">
                <label class="darkmode">
                    <input type="checkbox" class="drkmodeinput" id="darkSwitch"> <br />
                    <span class="checkdrkmode"></span>
                    <script src="~/JavaScript/Admins/Shared/dark-mode-switch.js"></script>
                </label>
            </span>
            <span class="navbar-text d-inline-flex align-items-center">
                <a asp-controller="Home" asp-action="Index" asp-area="Admin" class="btn"> @name </a> | <a asp-area="Admin" asp-controller="Account" asp-action="SignOut" class="btn btn-link btn-sm">خروج</a>
            </span>
