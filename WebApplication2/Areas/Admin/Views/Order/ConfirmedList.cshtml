@using WebApplication2.Models.Orders;
@model WebApplication2.Models.PaginatedList<OrderView>
@{
    ViewData["Title"] = "لیست سفارشات نهایی شده";
    var counter = 1;
}


@section Breadcrump{<nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">صفحه اصلی </a></li>
            <li class="breadcrumb-item" active" aria-current="page">لیست برندها</a></li>
            <li class="breadcrumb-item active" aria-current="page"><=شما اینجا هستید</li>
        </ol>
    </nav> }
<div class="card text-right border-primary">
        <div class="card-body">
            <table class="table caption-top">
                <thead>
                    <tr class="bg-light">
                        <th scope="col" class="text-md-right align-middle">#</th>
                        <th scope="col" style="width:20%" class="text-md-center align-middle">
                            شناسه
                        </th>
                        <th scope="col" style="width:20%" class="text-md-center align-middle">
                            نام خریدار
                        </th>
                        <th scope="col" style="width:10%" class="text-md-center align-middle"> تاریخ</th>
                        <th scope="col" style="width:10%" class="text-md-center align-middle">شماره فیش</th>
                        <th scope="col" style="width:20%" class="text-md-center align-middle">مجموع قیمت</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row" class="text-md-right align-middle">@counter</th>
                            <td class="text-md-center align-middle">
                                <a asp-action="Index" asp-controller="Brand" asp-area="Admin" asp-route-id="@item.id">
                                    <span class="text-muted align-middle">شناسه: @item.id</span>
                                </a>
                            </td>
                            <td class="text-md-center align-middle">
                                @item.customer
                                <br />
                                <span class="text-muted">شناسه: @item.customerid</span>
                            </td>

                            <td class="text-md-center align-middle">@item.orderdate</td>
                            <td class="text-md-center align-middle">
                                @item.fishnumber
                            </td>
                            <td class="text-md-center align-middle">@item.totalprice</td>
                        </tr>
                        counter++;
                    }


                </tbody>
            </table>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }
            <nav aria-label="..." dir="ltr">
                <ul class="pagination justify-content-center">
                    <li class="page-item ">
                        <a asp-action="List"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="page-link btn btn-default @prevDisabled">
                            صفحه قبلی
                        </a>

                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">2</span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a asp-action="List"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="page-link btn btn-default @nextDisabled">
                            صفحه بعدی
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
</div>


