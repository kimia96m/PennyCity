
@{
    ViewData["Title"] = "Add";
}

@section Breadcrump{<nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">صفحه اصلی </a></li>
            <li class="breadcrumb-item" active" aria-current="page"> افزودن برندها</li>
            <li class="breadcrumb-item active" aria-current="page"><=شما اینجا هستید</li>
        </ol>
    </nav> }
<div class="card text-right border-primary">
    <div class="card-body">
        <form class="form-horizontal frmproduct" method="post" asp-action="Save" asp-controller="Banner" asp-area="Admin" enctype="multipart/form-data" novalidate>
            <div class="mb-3 form-group row">
                <label class=" col-md-2 " for="primaryTitle">لینک </label>
                <div class="col-md-4">

                    <input type="url" class="form-control" lang="fa" id="primaryTitle" name="link" maxlength="50" value="" required>

                    @*<div class="invalid-feedback ">
                    نام فارسی مجاز است
                </div>
                <div class="valid-feedback ">
                    خوبه
                </div>*@
                </div>


            </div>
            <div class="form-group row ">
                <label class="col-md-2" for="formcontrolphoto">افزودن تصویر</label>
                <div class=" col-md-4">
                    <input type="file" class="form-control-file" id="formcontrolphoto" name="photo" required />
                    <div class="invalid-feedback ">
                        تصویر اجباری است
                    </div>
                </div>
            </div>
            <div class="form-group row ">
                <label class="col-md-2" for="formcontrolphoto"> انتخاب بنر بالایی وبسایت</label>
                <div class=" col-md-4">
                    <input type="checkbox" class="form-control-file" id="formcontrolphoto" name="isspecial" required />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4 ">
                    <button type="submit" class="btn btn-primary col-md-2">
                        ثبت
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>