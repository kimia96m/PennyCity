@using  WebApplication2.Models.ViewModels.Specifications
@model List<SpecificationGroupsView>
@{
    ViewData["Title"] = "مدیریت مشخصات فنی کالا ";
    var prodict = ViewBag.product;
      var title= ViewBag.producttitlz ;
    var id = (int?)ViewBag.id;  //ای دی کالا
}


@section Breadcrump{<nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin">صفحه اصلی </a></li>
            <li class="breadcrumb-item"><a asp-action="List" asp-controller="Product" asp-area="Admin">  لیست کالا ها</a></li>
            <li class="breadcrumb-item active" aria-current="page">مدیریت مشخصات فنی کالا </li>
            <li class="breadcrumb-item active" aria-current="page"><=شما اینجا هستید</li>
        </ol>
    </nav> }
<div class="card text-right border-primary">
    <div class="card-header d-flex align-items-center justify-content-between ">
        <h3>مدیریت مشخصات فنی @title </h3>
    </div>
    <div class="card-body">
        <form class="form-horizontal" action="@Url.Action("SaveSpecifications")" method="post">
            <div class="col-md-8">
                <input type="hidden" name="pid" value="@id" />
            </div>
            @foreach (var item in Model)
            {
                <div class="card mb-4">
                    <div class="card-header"><h2 class="h6">@item.title</h2></div>
                    @foreach (var x in item.specification)
                    {
                        <div class="card-body mb-4">
                            <div class="mb-3 form-group ">
                                <label class=" col-md-4 " for="exampleInputEmail1_1">@x.title</label>
                                <div class="col-md-8">
                                    <input type="hidden" name="ids" value="@x.id" />
                                    <input class="form-control" id="exampleInputEmail1_1" name="value_@x.id" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            <div class="card-body">
                <button type="submit" class="btn btn-primary">ثبت</button>
            </div>
        </form>
    </div>
</div>

   



@section Scripts{
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown()
        });
    </script>
}

