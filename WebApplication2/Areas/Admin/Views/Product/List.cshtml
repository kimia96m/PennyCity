@using WebApplication2.Models.Products.KeyPoints
@using WebApplication2.Models.ViewModels.Products
@model List<ProductView>
@{

    ViewData["Title"] = "لیست محصولات";
    int count = 1;
    var message = TempData["message"];
}


@section Breadcrump{<nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="?/Admin">صفحه اصلی </a></li>
            <li class="breadcrumb-item" active" aria-current="page">محصولات</a></li>
            <li class="breadcrumb-item active" aria-current="page"><=شما اینجا هستید</li>
        </ol>
    </nav> }

<div class="card text-right border-primary">
    <div class="card-header d-flex align-items-center justify-content-between ">
        <h3>لیست کالا</h3>
        <div>
            <a class="btn btn-outline-secondary btn-sm" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" type="button">
               سرچ بعدا درست کن
            </a>
            <a asp-action="Add" asp-controller="Product" asp-area="Admin" class="btn btn-outline-success btn-sm">افزودن کالا</a>
        </div>

    </div>
    <div class="card-body">
        <div class="row justify-content-around">
            <div class="col-md-6">
                <div class="collapse" id="collapseExample">
                    <div class="card mb-3 border-warning">
                        <div class="card-header" id="collapseExample">فیلتر</div>
                        <div class="card-body">
                            <form class="form-horizontal" method="post" action="">
                                <div class="mb-3 form-group ">
                                    <label class=" col-md-4 " for="exampleInputEmail1">عنوان</label>
                                    <div class="col-md-8"><input class="form-control" id="exampleInputEmail1" name="title"></div>


                                </div>
                                <div class="mb-3 form-group ">

                                    <label for="exampleInputPassword1" class="form-label col-md-8 " name="id">شناسه</label>
                                    <div class="col-md-8"><input class="form-control" id="exampleInputPassword1" autocomplete="off"></div>

                                </div>
                                <div class="mb-3 form-group ">

                                    <label for="exampleInputPassword1" class="form-label col-md-4 ">برند</label>
                                    <div class="mb-3">
                                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="brand">
                                            <option selected>انتخاب کنید...</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>
                                    <label for="exampleInputPassword1" class="form-label col-md-4 ">گروه</label>
                                    <div class="mb-3">
                                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="group">
                                            <option selected>انتخاب کنید...</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>
                                    <label for="exampleInputPassword1" class="form-label col-md-4 ">وضعیت</label>
                                    <div class="mb-3">
                                        <select class="form-select form-select-lg mb-3" name="state" aria-label=".form-select-lg example">
                                            <option selected>انتخاب کنید...</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>

                                </div>

                                <button type="submit" class="btn btn-primary">فیلتر</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <nav aria-label="..." dir="ltr">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active" aria-current="page">
                    <span class="page-link">2</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
        <table class="table caption-top">
            <p>@message</p>
            <thead>
                <tr class="bg-light">
                    <th scope="col">#</th>
                    <th scope="col" style="width:20%">نام کالا</th>
                    <th scope="col" style="width:10%">برند </th>
                    <th scope="col" style="width:10%">گروه</th>
                    <th scope="col" style="width:10%">وضعیت</th>
                    <th scope="col" style="width:20%">ایجاد کننده</th>
                    <th scope="col" style="width:20%">آخرین تغییرات</th>
                    <th class="text-left" scope="col">تنظیمات</th>
                </tr>
            </thead>
            <tbody>
                
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>
                        <strong class="h5"><a href="#">@item.PrimaryTitle</a></strong><br />
                        <span>@item.SecondaryTitle</span><br />
                        <span class="text-muted">@item.Id</span>
                    </td>
                    <td>@item.Brands.title</td>
                    <td>@item.Groups.title</td>
                    @if (item.state == WebApplication2.Models.Products.States.Enabled)
                    {
                        <td>فعال</td>
                    }
                    else
                    {
                        <td>غیر فعال</td>
                    }
                    <td>
                        @item.Creator
                        <br />
                        <span class="text-muted">تاریخ: @item.CreatDate </span>
                    </td>
                    @if (!string.IsNullOrEmpty(item.LastModifyDate))
                    {
                        <td>@item.LastModifier<br /><span class="text-muted">تاریخ : @item.LastModifyDate</span></td>

                    }
                    else
                    {
                        <td>---</td>

                    }
                <td class="align-middle ">
                    <div class="dropdown1">
                        <button onclick="myFunction()" class="dropbtn1 btn btn-secondary" aria-expanded="false"></button>
                        <ul id="myDropdown" class=" dropdown1-content text-right">
                            <li class=" dropdown1-content"><a class="dropdown-item" asp-action="Index" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id">جزییات</a></li>
                            <li><a class="dropdown-item" asp-action="Edit" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id"> ویرایش</a></li>
                            <li class=" dropdown1-content"><a class="dropdown-item" asp-action="Item" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id"> مدیریت اقلام کالا</a></li>
                            <li class=" dropdown1-content"><a class="dropdown-item" asp-action="Specifications" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id"> مدیریت مشخصات فنی</a></li>
                            <li class=" dropdown1-content"><a class="dropdown-item" asp-action="SpecificationList" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id"> مدیریت مشخصات فنی</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("List","KeyPoint",new { productid = item.Id, type = (byte)KeyPointsTypes.negative @*pid=1,type =(byte)KeyPointsTypes.negative*@})"> مدیریت نقاط منفی  </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("List","KeyPoint",new { productid = item.Id, type = (byte)KeyPointsTypes.positive @*pid=2,type =(byte)KeyPointsTypes.positive*@})"> مدیریت نقاط مثبت  </a></li>
                            <li class=" dropdown1-content"><a class="dropdown-item text-danger" asp-action="Delete" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id"> حذف</a></li>
                        </ul>
                    </div>
                </td>
                </tr>

                { count++; }
            }

            </tbody>
            </table>
            <nav aria-label="..." dir="ltr">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">2</span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.dropdown-toggle').dropdown()
            });
        </script>
    }

