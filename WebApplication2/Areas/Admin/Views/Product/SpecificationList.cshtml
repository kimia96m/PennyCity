@using WebApplication2.Models.ViewModels.Specifications
@model WebApplication2.Models.PaginatedList<SpecificationValuesView>
@{
    ViewData["Title"] = "SpecificationList";
    var count = 1;

}

@section Breadcrump{<nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="?/Admin">صفحه اصلی </a></li>
            <li class="breadcrumb-item" active" aria-current="page">محصولات</li>
            <li class="breadcrumb-item active" aria-current="page"><=شما اینجا هستید</li>
        </ol>
    </nav> }

<div class="card text-right border-primary">
    <div class="card-header d-flex align-items-center justify-content-between ">
        <h3>لیست کالا</h3>
        <div>
            <a class="btn btn-outline-secondary btn-sm" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" type="button">
                سرچ بعدا درست کن
            </a>
            <a asp-action="Add" asp-controller="Product" asp-area="Admin" class="btn btn-outline-success btn-sm">افزودن کالا</a>
        </div>

    </div>
    <div class="card-body">
        <div class="row justify-content-around">
            <div class="col-md-6">
                <div class="collapse" id="collapseExample">
                    <div class="card mb-3 border-warning">
                        <div class="card-header" id="collapseExample">فیلتر</div>
                        <div class="card-body">
                            <form class="form-horizontal" method="post" action="">
                                <div class="mb-3 form-group ">
                                    <label class=" col-md-4 " for="exampleInputEmail1">عنوان</label>
                                    <div class="col-md-8"><input class="form-control" id="exampleInputEmail1" name="title"></div>


                                </div>
                                <div class="mb-3 form-group ">

                                    <label for="exampleInputPassword1" class="form-label col-md-8 " name="id">شناسه</label>
                                    <div class="col-md-8"><input class="form-control" id="exampleInputPassword1" autocomplete="off"></div>

                                </div>
                                <div class="mb-3 form-group ">

                                    <label for="exampleInputPassword1" class="form-label col-md-4 ">برند</label>
                                    <div class="mb-3">
                                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="brand">
                                            <option selected>انتخاب کنید...</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>
                                    <label for="exampleInputPassword1" class="form-label col-md-4 ">گروه</label>
                                    <div class="mb-3">
                                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="group">
                                            <option selected>انتخاب کنید...</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>
                                    <label for="exampleInputPassword1" class="form-label col-md-4 ">وضعیت</label>
                                    <div class="mb-3">
                                        <select class="form-select form-select-lg mb-3" name="state" aria-label=".form-select-lg example">
                                            <option selected>انتخاب کنید...</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>

                                </div>

                                <button type="submit" class="btn btn-primary">فیلتر</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <nav aria-label="..." dir="ltr">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <span class="page-link"> <a asp-action="SpecificationList" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Last Name</a></span>
                </li>
                <li class="page-item">
                    First Name
                </li>
                <li class="page-item">
                    <span class="page-link"> <a asp-action="SpecificationList" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Enrollment Date</a></span>
                </li>
            </ul>

        </nav>
        <table class="table caption-top">
            <thead>
                <tr class="bg-light">
                    <th scope="col">#</th>
                    <th scope="col" style="width:20%">نام مقدار</th>
                    <th scope="col" style="width:10%">نام  مشخصه </th>
                    <th scope="col" style="width:10%">نام محصول</th>
                    <th scope="col" style="width:10%">سازنده</th>
                    <th scope="col" style="width:20%">وضعیت محصول</th>
                    <th class="text-left" scope="col">تنظیمات</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
{
                <tr>
                    <th scope="row">@count</th>
                    <td>
                        <strong class="h5"><a href="#">@item.title</a></strong><br />
                        <span class="text-muted">@item.id</span>
                    </td>
                    <td scope="row">@item.specification.title</td>
                    <td scope="row">@item.product.PrimaryTitle</td>
                    <td scope="row">@item.creator</td>
                    <td scope="row">@item.product.state</td>
                    <td class=" align-middle">
                        <a class="dropdown-item" asp-action="DeleteSpecification" asp-controller="Product" asp-area="Admin" asp-route-id="@item.id"> حذف</a>
                    </td>            
                </tr>

                { count++; }
            }

            </tbody>
        </table>
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
        <nav aria-label="..." dir="ltr">
            <ul class="pagination justify-content-center">
                <li class="page-item ">
                        <a asp-action="SpecificationList"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="page-link btn btn-default @prevDisabled">
                            صفحه قبلی
                        </a>
                   
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active" aria-current="page">
                    <span class="page-link">2</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a asp-action="SpecificationList"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link btn btn-default @nextDisabled">
                        صفحه بعدی
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>



