    <div class="card-body">
        <form class="form-horizontal frmproduct" method="post" action="@Url.Action("Save")" enctype="multipart/form-data" novalidate>
            @{if (id != null)
                {
                    <input type="hidden" name="id" value="@id" />

                }
            }
            <div class="mb-3 form-group row">
                <label class=" col-md-2 " for="primaryTitle">نام </label>
                <div class="col-md-4">
                    @if (Model?.title != null)
                    {
                        <input class="form-control" id="primaryTitle" name="title" maxlength="50" value="@Model.title" required>
                    }
                    else
                    {
                        <input class="form-control" id="primaryTitle" name="title" maxlength="50" required>
                    }

                    <div class="invalid-feedback ">
                        یه اسم درست بذار
                    </div>
                    <div class="valid-feedback ">
                        خوبه
                    </div>
                </div>


            </div>
            <div class="mb-3 form-group row ">
                <label for="txtdiscription" class="form-label col-md-2 " name="id">توضیحات </label>
                <div class="col-md-4">
                    @if (Model != null)
                    {
                        <textarea class="form-control" id="txtdiscription" autocomplete="off" name="description" maxlength="200" rows="4" required>@Model.description</textarea>

                    }
                    else
                    {
                        <textarea class="form-control" id="txtdiscription" autocomplete="off" name="description" maxlength="200" rows="4" required></textarea>
                    }
                    <div class="invalid-feedback ">
                        یه اسم درست بذار
                    </div>
                </div>

            </div>
            @if (id != null)
            {
                <div class="form-group row ">
                    <label class="col-md-2" for="formcontrolphoto">مبلغ پرداخت شده</label>
                    <div class=" col-md-4">
                        <input type="number" class="form-control-file" name="todaypayment" required />
                        <div class="invalid-feedback ">
                           مبلغ صحیح را وارد کنید
                        </div>
                    </div>
                </div>
            }
            else
            {

            }
            <div class="form-group row ">
                <label class="col-md-2" for="formcontrolphoto">افزودن تصویر</label>
                <div class=" col-md-4">
                    <input type="file" class="form-control-file" id="formcontrolphoto" name="photo" required />
                    <div class="invalid-feedback ">
                        یه عکس درست بذار
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4 ">
                    <button type="submit" class="btn btn-primary col-md-2">
                        ثبت
                    </button>
                </div>
            </div>

        </form>

    </div>
</div>