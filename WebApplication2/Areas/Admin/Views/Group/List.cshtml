@model WebApplication2.Models.PaginatedList<GroupView>
@{
    ViewData["Title"] = "لیست گروه ها";
    var massage = TempData["massage"];
}



@section Breadcrump{<nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">صفحه اصلی </a></li>
            <li class="breadcrumb-item" active" aria-current="page">لیست گروه ها</a></li>
            <li class="breadcrumb-item active" aria-current="page"><=شما اینجا هستید</li>
        </ol>
    </nav> }
@{
        var prevDisabled = !Model.HasPreviousPage ? "page-item disabled" : "page-item";
        var nextDisabled = !Model.HasNextPage ? "page-item disabled" : "page-item";
        int next = Model.PageIndex + 1;
        int pre = Model.PageIndex - 1;
}
<div class="card text-right border-primary">
    <div class="card-header d-flex align-items-center justify-content-between ">
        <h3>لیست گروه ها</h3>
        <div>
            <a class="btn btn-outline-secondary btn-sm" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" type="button">
                جست و جوی
                پیشرفته
            </a>
            <a asp-action="Add" asp-controller="Group" asp-area="Admin" class="btn btn-outline-success btn-sm">افزودن گروه</a>
        </div>

    </div>
    <div class="card-body">
        <div class="row justify-content-around">
            <div class="col-md-6">
                <div class="collapse" id="collapseExample">
                    <div class="card mb-3 border-warning">
                        <div class="card-header" id="collapseExample">فیلتر</div>
                        <div class="card-body">
                            <form class="form-horizontal" method="post" action="">
                                <div class="mb-3 form-group ">
                                    <label class=" col-md-4 " for="exampleInputEmail1">عنوان</label>
                                    <div class="col-md-8"><input class="form-control" id="exampleInputEmail1" name="title"></div>


                                </div>
                                <div class="mb-3 form-group ">

                                    <label for="exampleInputPassword1" class="form-label col-md-8 " name="id">شناسه</label>
                                    <div class="col-md-8"><input class="form-control" id="exampleInputPassword1" autocomplete="off"></div>

                                </div>
                                <div class="mb-3 form-group ">
                                    <label for="exampleInputPassword1" class="form-label col-md-4 ">وضعیت</label>
                                    <div class="mb-3">
                                        <select class="form-select form-select-lg mb-3" name="state" aria-label=".form-select-lg example">
                                            <option selected>انتخاب کنید...</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>

                                </div>

                                <button type="submit" class="btn btn-primary">فیلتر</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <p>@massage</p>
        <nav aria-label="..." dir="ltr">
            <ul class="pagination justify-content-center">
                <li class="@prevDisabled">
                    <a asp-action="List"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link">Previous</a>
                </li>
                @if (pre != 0)
                {
                    <li class="page-item"><a class="page-link" href="#">@pre</a></li>}
                <li class="page-item active" aria-current="page">
                    <span class="page-link">@Model.PageIndex</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">@next</a></li>
                <li class="@nextDisabled">
                    <a asp-action="List"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link">Next</a>
                </li>
            </ul>
        </nav>
        <table class="table caption-top">
            <thead>
                <tr class="bg-light">
                    <th scope="col">#</th>
                    <th scope="col" style="width:20%">نام گروه</th>
                    <th scope="col" style="width:10%">نام خارجی</th>
                    <th scope="col" style="width:10%">وضعیت</th>
                    <th scope="col" style="width:20%">ایجاد کننده</th>
                    <th scope="col" style="width:20%">آخرین تغییرات</th>
                    <th @*class="text-left"*@ scope="col">تنظیمات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>
                            <strong class="h5"><a asp-action="Index" asp-controller="Group" asp-area="Admin" asp-route-id="@group.id"> @group.title </a></strong><br />
                            <span></span><br />
                            <span class="text-muted">شناسه: @group.id</span>
                        </td>
                        <td>@group.slug</td>
                        @if (group.State == WebApplication2.Models.Products.States.Enabled)
                        {
                            <td>فعال</td>}
                        else
                        {
                            <td>غیرفعال</td>}
                        <td>
                            @group.creator
                            <br />
                            <span class="text-muted">@group.createdatetime</span>
                        </td>
                        @if (!string.IsNullOrEmpty(group.lastmodifydate))
                        {
                            <td>
                                @group.lastmodifier
                                <br />
                                <span class="text-muted">@group.lastmodifydate</span>
                            </td>
                        }
                        else
                        {
                            <td> --- </td>}

                        <td class="align-middle ">

                            @*<div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"></button>
                                    <ul class="dropdown-menu text-right" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" asp-action="Index" asp-controller="Brand" asp-area="Admin">جزییات</a></li>
                                        <li><a class="dropdown-item" asp-action="Edit" asp-controller="Brand" asp-area="Admin"> ویرایش</a></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-controller="Brand" asp-area="Admin"> حذف</a></li>
                                    </ul>
                                </div>*@
                            <div class="dropdown1">
                                <button onclick="myFunction()" class="dropbtn1 btn btn-secondary" aria-expanded="false"></button>
                                <ul id="myDropdown" class=" dropdown1-content text-right">
                                    <li class=" dropdown1-content"><a asp-action="Index" asp-controller="Group" asp-area="Admin" asp-route-id="@group.id">جزییات</a></li>
                                    <li class=" dropdown1-content"><a asp-action="Edit" asp-controller="Group" asp-area="Admin" asp-route-id="@group.id"> ویرایش</a></li>
                                    <li class=" dropdown1-content"><a asp-action="Groups" asp-controller="Specification" asp-area="Admin" asp-route-id="@group.id"> لیست مشخصات فنی</a></li>
                                    <li class=" dropdown1-content"><a class=" text-danger" asp-action="Delete" asp-controller="Group" asp-area="Admin" asp-route-id="@group.id"> حذف</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="..." dir="ltr">
            <ul class="pagination justify-content-center">
                <li class="@prevDisabled">
                    <a asp-action="List"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link">Previous</a>
                </li>
                @if (pre != 0)
                {
                    <li class="page-item"><a class="page-link" href="#">@pre</a></li>}
                <li class="page-item active" aria-current="page">
                    <span class="page-link">@Model.PageIndex</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">@next</a></li>
                <li class="@nextDisabled">
                    <a asp-action="List"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>


